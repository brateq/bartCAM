<div class="col-md-4 col-md-offset-4">
	<h1>Rejestracja</h1>
	<% if @save and @save.errors %>
	<ul>
		<% @save.errors.full_messages.each do |err| %>
		 <li><%= err %></li>
	<% end %>
	</ul>
	
	<% end %>
	<%= form_for "user", :url => { :action => "new" } do |f| %>
	
	<%= f.label "E-mail" %>
	<%= f.text_field "email", :class => "form-control", :required => true, :autofocus => true %><br>
	<%= f.label "Hasło (minimum 4 znaki)" %>
	<%= f.password_field "password", :class => "form-control", :required => true %><br>
	
	<%= f.submit "Zarejestruj się",  :class => "btn btn-lg btn-primary btn-block" %> 
	
	<% end %>
</div>